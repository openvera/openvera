# Flask secret key (auto-generated by setup.sh)
SECRET_KEY=change-me-to-a-random-string

# Document files directory (optional -- defaults to VERA_BASE_DIR)
# Set to a shared folder (e.g. iCloud) if files live outside the data dir
# VERA_FILES_DIR=/path/to/vera-data

# Enable Banking integration (optional -- leave empty to disable)
# Register at https://enablebanking.com and create an application
ENABLE_BANKING_APP_ID=
ENABLE_BANKING_PRIVATE_KEY_PATH=

# Admin token for banking API routes (/api/banking/*)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
VERA_ADMIN_TOKEN=
